@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Reset hasła";
}

<div class="auth-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-5">
                <div class="card auth-card shadow-sm">
                    <div class="card-body p-4">
                        <h1 class="auth-title mb-1">Nie pamiętasz hasła?</h1>
                        <p class="auth-subtitle mb-4">
                            Podaj adres e-mail powiązany z kontem, a wyślemy link do resetu hasła.
                        </p>

                        <form method="post" class="auth-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label fw-bold">E-mail</label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="przykladowyemail@gmail.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 btn-lg">
                                Wyślij link do resetu
                            </button>

                            <div class="auth-footer">
                                <span>Wróć do</span>
                                <a class="auth-link" asp-page="./Login">logowania</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="auth-back mt-3 text-center">
                    <a class="auth-link" asp-controller="Home" asp-action="Index">← Wróć na stronę główną</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
