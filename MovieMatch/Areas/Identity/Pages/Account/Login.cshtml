@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="auth-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-5">
                <div class="card auth-card shadow-sm">
                    <div class="card-body p-4">
                        <h1 class="auth-title mb-1">Zaloguj się</h1>
                        <p class="auth-subtitle mb-4">Wróć do wyszukiwania i dodawania filmów do listy.</p>

                        <form id="account" method="post" class="auth-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">E-mail</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Hasło</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">Zapamiętaj mnie</label>
                                </div>

                                <a id="forgot-password" class="auth-link" asp-page="./ForgotPassword">Nie pamiętam hasła</a>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-primary w-100 btn-lg">
                                Zaloguj się
                            </button>

                            <div class="auth-footer mt-4">
                                <span>Nie masz konta?</span>
                                <a class="auth-link fw-semibold" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="auth-back mt-3 text-center">
                    <a class="auth-link" asp-controller="Home" asp-action="Index">← Wróć na stronę główną</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
